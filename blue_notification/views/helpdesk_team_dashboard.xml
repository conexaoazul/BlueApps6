<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Kanban View -->
        <record id="helpdesk_team_view_kanban_dashboard" model="ir.ui.view">
            <field name="name">helpdesk.team.kanban.dashboard</field>
            <field name="model">helpdesk.team</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_team_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="js_class">helpdesk_dashboard_kanban</attribute>
                </xpath>
                
                <xpath expr="//div[hasclass('o_kanban_card_content')]" position="inside">
                    <div class="row">
                        <div class="col-6 o_kanban_primary_left">
                            <div class="o_primary">
                                <span>SLA Performance</span>
                                <span class="o_value">
                                    <field name="sla_performance"/>%
                                </span>
                            </div>
                            <div class="o_primary">
                                <span>Satisfação</span>
                                <span class="o_value">
                                    <field name="satisfaction_rate"/>%
                                </span>
                            </div>
                        </div>
                        <div class="col-6 o_kanban_primary_right">
                            <div class="o_primary">
                                <span>Tickets Abertos</span>
                                <span class="o_value">
                                    <field name="open_ticket_count"/>
                                </span>
                            </div>
                            <div class="o_primary">
                                <span>Tempo Médio</span>
                                <span class="o_value">
                                    <field name="avg_response_time"/> hrs
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Gráfico de Performance -->
                    <div class="o_kanban_graph_section">
                        <field name="performance_graph" widget="performance_graph"/>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Menu de Dashboard -->
        <record id="action_helpdesk_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard Helpdesk</field>
            <field name="res_model">helpdesk.team</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="helpdesk_team_view_kanban_dashboard"/>
            <field name="context">{'search_default_my_teams': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure suas equipes de Helpdesk
                </p>
                <p>
                    Gerencie suas equipes e acompanhe o desempenho em tempo real.
                </p>
            </field>
        </record>

        <menuitem id="menu_helpdesk_dashboard"
                  name="Dashboard"
                  parent="helpdesk.helpdesk_menu_root"
                  action="action_helpdesk_dashboard"
                  sequence="1"/>
    </data>
</odoo>