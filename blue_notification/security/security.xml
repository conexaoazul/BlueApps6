<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Categoria de Segurança -->
        <record id="module_category_helpdesk_notification" model="ir.module.category">
            <field name="name">Notificações Helpdesk</field>
            <field name="description">Gerencia as notificações e relatórios do helpdesk</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupos de Segurança -->
        <record id="group_helpdesk_notification_user" model="res.groups">
            <field name="name">Usuário</field>
            <field name="category_id" ref="module_category_helpdesk_notification"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_helpdesk_notification_manager" model="res.groups">
            <field name="name">Gerente</field>
            <field name="category_id" ref="module_category_helpdesk_notification"/>
            <field name="implied_ids" eval="[(4, ref('group_helpdesk_notification_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Regras de Registro -->
        <record id="helpdesk_notification_comp_rule" model="ir.rule">
            <field name="name">Notificações Helpdesk: regra multi-empresa</field>
            <field name="model_id" ref="model_helpdesk_notification"/>
            <field name="domain_force">['|', ('team_id.company_id', '=', False), ('team_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="helpdesk_notification_personal_rule" model="ir.rule">
            <field name="name">Notificações Helpdesk: regra pessoal</field>
            <field name="model_id" ref="model_helpdesk_notification"/>
            <field name="domain_force">['|', ('team_id.member_ids', 'in', user.id), ('manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_notification_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="helpdesk_notification_manager_rule" model="ir.rule">
            <field name="name">Notificações Helpdesk: regra gerente</field>
            <field name="model_id" ref="model_helpdesk_notification"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_helpdesk_notification_manager'))]"/>
        </record>
    </data>
</odoo>